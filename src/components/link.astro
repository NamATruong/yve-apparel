---
import clsx from "clsx/lite";

type Props = {
    href: string
    className?: string
    variant?: "primary" | "secondary"
}

const { href, variant = "primary", className } = Astro.props;
---

<a href={href} class={clsx(
    "w-fit text-base sm:text-2xl px-5 py-2 rounded-full transition-all duration-300 ease-in-out whitespace-nowrap",
    variant === "primary" && "text-neutral-200 bg-[#505C45] hover:outline-2 outline-offset-2 outline-emerald-600",
    variant === "secondary" && "text-[#505C45] hover:text-[#505C45] bg-transparent hover:bg-[#505C45]/20 hover:outline-2 outline-offset-2 outline-[#505C45]/20",
    className
)}>
    <slot />
</a>