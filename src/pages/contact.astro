import H2 from "../components/h2.astro";
import InfoLayout from "../layouts/InfoLayout.astro";
import ExternalLink from "../components/external-link.astro";
---

<InfoLayout>
     <div class="p-4 sm:pt-8 sm:px-12 pb-20 min-h-screen flex flex-col justify-between">
          
          <div>
               <H2> How I can help? </H2>
               <p class="mt-4 md:mt-8 lg:mt-12 text-xl xl:text-2xl text-[#F2ECE3] text-balance">
                    Got more question about my collections?
                    Get in touch.
               </p>

               <div class="mt-6 sm:mt-12 flex flex-col gap-1">
                    <a href="mailto:emailcuaem@gmail.com" class="mb-8 w-fit group flex items-center gap-1 text-lg lg:text-2xl text-[#F2ECE3] hover:text-[#C8BBA8]">
                         emailcuaem@gmail.com
                         <svg xmlns="http://www.w3.org/2000/svg" class="-rotate-45 group-hover:rotate-0 transition-all duration-300 ease-in-out" width="24" height="24" viewBox="0 0 24 24">
                              <title>Arrow Icon</title>
                              <path fill="currentColor" d="M12 22c5.523 0 10-4.477 10-10S17.523 2 12 2S2 6.477 2 12s4.477 10 10 10" opacity=".5"/>
